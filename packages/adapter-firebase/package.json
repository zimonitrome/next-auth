  },
  "scripts": {
    "dev": "tsc -w",
    "build": "tsc",
    "test": "firebase emulators:exec --only firestore --project next-auth-test 'jest -c tests/jest.config.js'"
  },
  "dependencies": {
    "@auth/core": "workspace:*"
  },
  "peerDependencies": {
    "firebase-admin": "^11.4.1"
  },
  "devDependencies": {
    "@next-auth/adapter-test": "workspace:*",
    "@next-auth/tsconfig": "workspace:*",
    "firebase-admin": "^11.4.1",
    "firebase-tools": "^11.16.1",
    "jest": "^29.3.1"
  }
